<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03_MOD03.Activity4" Title="Absolute Layout">
    <ContentPage.Content>
        <StackLayout>
         
            <AbsoluteLayout Padding="20"
                                VerticalOptions="CenterAndExpand">
                <Entry AbsoluteLayout.LayoutBounds="0, 0, 1, 40"
                           AbsoluteLayout.LayoutFlags="XProportional, WidthProportional"
                           Placeholder="Username" 
                           HorizontalOptions="FillAndExpand" />
                <Entry AbsoluteLayout.LayoutBounds="0, 60, 1, 40"
                           AbsoluteLayout.LayoutFlags="XProportional, WidthProportional"
                           Placeholder="Password" 
                           HorizontalOptions="FillAndExpand" />

      
                <Button AbsoluteLayout.LayoutBounds="0, 120, 1, 40"
                            AbsoluteLayout.LayoutFlags="XProportional, WidthProportional"
                            HorizontalOptions="FillAndExpand"
                            Text="LOGIN"
                            TextColor="White"
                            BackgroundColor="Navy" />
            </AbsoluteLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>